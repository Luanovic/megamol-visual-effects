    </namespace>

    <namespace name="perpixellight">
      <shader name="vertex">
        <snippet type="file">protein_gl/protein/snippets/cartoon_perpixellight_vertex.glsl</snippet>
      </shader>

      <shader name="fragment">
        <snippet type="file">protein_gl/protein/snippets/cartoon_perpixellight_fragment.glsl</snippet>
      </shader>
    </namespace>
